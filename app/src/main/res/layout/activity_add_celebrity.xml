<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCelebrity">

    <LinearLayout
        android:id="@+id/addCelebrityLL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/addCelebrityNameET"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Celebrity's name..."
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/addTaboo1ET"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Taboo 1"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/addTaboo2ET"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Taboo 2"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/addTaboo3ET"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Taboo 3"
            android:inputType="textPersonName"
             />

        <Button
            android:id="@+id/addCelebrityBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Add Celebrity"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:backgroundTint="#DFAD64"
            android:textColor="@color/black"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>